<div class="row my-3">
  <div class="col-md-12 border border-primary rounded row">
    <div class="col-md-3">
      <img class="img-fluid d-block" src="https://www.google.com/search?q=link+to+image&source=lnms&tbm=isch&sa=X&ved=0ahUKEwi2jIvp4dDfAhWWFYgKHUJ6CyoQ_AUIDigB&biw=1855&bih=953#imgdii=kktoVHoOITOgIM:&imgrc=kgEN_8Fvz9iQSM:">
    </div>
    <div  class="col-md-9">
      <h2 class="my-1"><%= @user.name %></h2>
      <h3 class="my-1"><%= @user.email %></h3>
      <%= link_to "follow", "#", class: "btn" %>
      <% if current_user.admin? %>
        <div id="role" class="dropdown">
          <%= button_tag @user.is_role, class: "btn btn-primary dropdown-toggle",
            data: {toggle: "dropdown"} %>
          <div class="dropdown-menu">
            <%= link_to t(".user"), admin_user_path(params.permit().merge(role: 0)),
              method: :put, remote:true, class: "dropdown-item" %>
            <%= link_to t(".admin"), admin_user_path(params.permit().merge(role: 1)),
              method: :put, remote:true, class: "dropdown-item" %>
            <%= link_to t(".shipper"), admin_user_path(params.permit().merge(role: 2)),
              method: :put, remote:true, class: "dropdown-item" %>
          </div>
        </div>
      <% end %>
      <div class="col-md-12 row">
        <%= link_to "Folowing", "#", class: "mx-2" %>
        <%= link_to "Folower", "#", class: "mx-2" %>
        <%= link_to "Books following", "#", class: "mx-2" %>
        <%= link_to "Authors following", "#", class: "mx-2" %>
        <%= link_to "Like", "#", class: "mx-2" %>
        <%= link_to "Bought", "#", class: "mx-2" %>
        <%= link_to "Return late", "#", class: "mx-2" %>
      </div>
    </div>
  </div>
</div>
