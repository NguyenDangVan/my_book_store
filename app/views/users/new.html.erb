<% provide(:title, t(".sign_up")) %>
<div class="col-md-7 border border-primary rounded my-md-5">
  <div class="col-md-12">
    <h2 class="text-center my-md-3"><%= t(".sign_up") %></h2>
  </div>
  <%= form_for :user do |f| %>
    <div class="form-group">
      <div class="input-group">
       <%= f.label :name, t(".name"), class: "col-md-4" %>
       <%= f.text_field :name, class: "form-control", placeholder: t(".your_name") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :email, class: "col-md-4" %>
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: t(".email") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :address, class: "col-md-4" %>
        <%= f.text_field :address, class: "form-control", id: "address" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :phone, class: "col-md-4" %>
        <%= f.phone_field :phone, class: "form-control", id: "phone" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :password, t(".password"), class: "col-md-4" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :password_comfirmation, t(".password_comfirm"), class: "col-md-4" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.submit t("users.new.create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
